files:
  "/usr/local/bin/init_nltk.sh":
    mode: "000755"
    owner: root
    group: root
    content: |            
      #!/bin/bash
      pip install nltk
      python -m nltk.downloader -d /usr/local/share/nltk_data punkt
      python -m nltk.downloader -d /usr/local/share/nltk_data stopwords

container_commands:
  01_run_init:
    command: "sudo ./usr/local/bin/init_nltk.sh"

